{
  "name": "vite-react-electron",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:main": "nodemon",
    "dev:renderer": "vite",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "MyApp",
    "asar": true,
    "files": [
       "main.js",
        "preload.js",
    "dist/**",
    "package.json",
    "!node_modules",
    "!scripts",
    "!**/*.map"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icons/logo.icns"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "build/icons/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "asarUnpack": [
      "node_modules/electron/**",
      "node_modules/antd-mobile/**",
      "preload.js"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "antd-mobile": "^5.39.0",
    "axios": "^1.10.0",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "lodash": "^4.17.21",
    "lorem-ipsum": "^2.0.8",
    "node-notifier": "^10.0.1",
    "pinyin": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.6.3",
    "reactjs-emoji-keyboard": "^1.0.17",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@types/crypto-js": "^4.2.2",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.8",
    "electron-reloader": "^1.2.3",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "js-sha256": "^0.11.1",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
